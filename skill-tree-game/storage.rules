rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow uploads for evidence (screenshots, files)
    match /screenshot/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /evidence/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Allow all other files to be readable but not writable
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
